<h1>Listing wholesales</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wholesales.each do |wholesale| %>
      <tr>
        <td><%= wholesale.name %></td>
        <td><%= wholesale.address %></td>
        <td><%= wholesale.phone %></td>
        <td><%= wholesale.email %></td>
        <td><%= link_to 'Show', wholesale %></td>
        <td><%= link_to 'Edit', edit_wholesale_path(wholesale) %></td>
        <td><%= link_to 'Destroy', wholesale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wholesale', new_wholesale_path %>
